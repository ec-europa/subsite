<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="social_extension">
    <description>PHPCS Configuration for extensions requiring PHP 7.4 or later</description>
    <file>.</file>

    <config name="ignore_errors_on_exit" value="0"/>
    <config name="ignore_warnings_on_exit" value="0"/>
    <config name="default_standard" value="Drupal"/>
    <config name="drupal_core_version" value="9" />

    <arg name="extensions" value="php,module,inc,install,test,profile,theme" />

    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>scaffold/</exclude-pattern>

    <!-- Include all Drupal best practices -->
    <rule ref="Drupal">
        <!-- Until https://www.drupal.org/project/coder/issues/3123282 is fixed -->
        <exclude name="Drupal.Commenting.VariableComment.MissingVar"/>
    </rule>

    <!-- Until https://www.drupal.org/project/coder/issues/3191651 is fixed -->
    <exclude name="Squiz.WhiteSpace.OperatorSpacing.NoSpaceAfter" />
</ruleset>
