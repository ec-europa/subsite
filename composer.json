{
    "name": "digit/opensocial",
    "description": "Open Social tailored for the European Commission",
    "type": "project",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "drupal/dropsolid_purge": "^1.0",
        "drupal/graphql": "4.2 as 4.1",
        "drupal/social_geolocation": "^2.0",
        "drupal/social_kpi_lite": "^2.0",
        "drupal/social_pwa": "^1.0",
        "drush/drush": "^10.0",
        "goalgorilla/oec_core": "^1.0",
        "goalgorilla/open_social": "^11.1.0",
        "php": "^7.4",
        "psr/cache": "^1.0",
        "symfony/deprecation-contracts": "^2.4"
    },
    "require-dev": {
        "drupal/drupal-driver": "^2.1",
        "drupal/drupal-extension": "^4.0",
        "ec-europa/toolkit": "^4.5.5"
    },
    "scripts": {
        "post-root-package-install": [
            "Subsite\\composer\\SetupWizard::setup"
        ],
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "repositories": {
        "oec_core": {
            "type": "path",
            "url": "lib/modules/oec_core",
            "options": {
                "symlink": false
            }
        },
        "social_eu_login": {
            "type": "path",
            "url": "lib/modules/social_eu_login",
            "options": {
                "symlink": false
            }
        },
        "social_oe_webtools": {
            "type": "path",
            "url": "lib/modules/social_oe_webtools",
            "options": {
                "symlink": false
            }
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
              "web-root": "./web"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module",
                "type:drupal-module-custom"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "patches": {
            "drupal/bootstrap": {
                "Prevent loading of Ckeditor buttons Safari": "resources/patches/DS-6458.patch"
            },
            "drupal/core": {
                "Fake the Last-Modified HTTP header coming from Weblate": "resources/patches/fake-last-modified-header.patch",
                "Prevent basic site settings error for invalid path": "resources/patches/drupal-access-check-site-settings.patch"
            },
            "drupal/field_group": {
                "Error: Unsupported operand types": "https://www.drupal.org/files/issues/2020-12-18/3032426-10.patch",
                "Undefined property: stdClass::$region in field_group_form_process().": "https://www.drupal.org/files/issues/2020-06-15/3059614-37.patch"
            },
            "openeuropa/oe_authentication": {
                "Remove unneeded user cancel methods for EU Login feature": "resources/patches/oe_authentication-remove_user_cancel_methods.patch"
            }
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "patchLevel": {
          "drupal/core": "-p2"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/SetupWizard.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\Site\\Tests\\": "./tests/"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "sort-packages": true
    },
    "replace": {
        "bower-asset/mocha": "*",
        "drupal/devel": "*",
        "drupal/drupal": "*",
        "drupal/google_analytics": "*"
    }
}
